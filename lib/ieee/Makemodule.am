	lib/ieee/_IEEE.STD_LOGIC_1164-body.bc \
	lib/ieee/IEEE.NUMERIC_STD-body \
	lib/ieee/_IEEE.NUMERIC_STD-body.bc \
	lib/ieee/IEEE.NUMERIC_BIT-body \
