	lib/ieee/_IEEE.STD_LOGIC_1164-body.so \
	lib/ieee/_IEEE.NUMERIC_STD-body.so \
	lib/ieee/_IEEE.NUMERIC_BIT-body.so \
	lib/ieee/_IEEE.MATH_REAL.so \
	lib/ieee/_IEEE.MATH_REAL-body.so \
	lib/ieee/_IEEE.MATH_COMPLEX.so \
